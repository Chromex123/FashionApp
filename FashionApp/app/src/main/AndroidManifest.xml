<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FashionApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.your_posts.YourPostsActivityPostDetail"
            android:exported="false" />
        <activity
            android:name=".ui.favorites.FavoritesActivityPostDetail"
            android:exported="false" />
        <activity
            android:name=".ui.inspiration.InspirationActivityOutfitDetail"
            android:exported="false" />
        <activity
            android:name=".ui.inspiration.InspirationActivityPostDetail"
            android:exported="false" />
        <activity
            android:name=".ui.inspiration.InspirationActivityOutfitSelect"
            android:exported="false" />
        <activity
            android:name=".ui.inspiration.InspirationActivityPost"
            android:exported="false" />
        <activity
            android:name=".ui.home.HomeActivityDetail"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FashionApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>